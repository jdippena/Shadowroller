<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:paddingTop="8dp">
    <TextView
        android:layout_width="@dimen/widget_result_circle_size"
        android:layout_height="@dimen/widget_result_circle_size"
        android:id="@+id/widget_result_circle"
        android:layout_gravity="center"
        android:background="@drawable/roll_result_circle"
        android:textColor="@android:color/primary_text_light"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        tools:text="4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="@dimen/widget_plus_minus_button_size"
                android:layout_height="@dimen/widget_plus_minus_button_size"
                android:id="@+id/widget_minus_button"
                android:background="@drawable/plus_minus_circle"
                android:layout_gravity="center"
                android:text="@string/text_minus_button"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/primary_text_light"/>
        </FrameLayout>
        <TextView
            android:layout_width="@dimen/widget_big_red_button_size"
            android:layout_height="@dimen/widget_big_red_button_size"
            android:id="@+id/widget_big_red_button"
            android:layout_marginTop="0dp"
            android:background="@drawable/roll_circle"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            tools:text="10"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="@dimen/widget_plus_minus_button_size"
                android:layout_height="@dimen/widget_plus_minus_button_size"
                android:id="@+id/widget_plus_button"
                android:background="@drawable/plus_minus_circle"
                android:layout_gravity="center"
                android:text="@string/text_plus_button"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/primary_text_light"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>