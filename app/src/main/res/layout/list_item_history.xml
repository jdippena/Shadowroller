<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:gravity="center">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_item_history_star"
            android:src="@drawable/ic_star"/>
    </FrameLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_history_test_type"
        android:padding="4dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="14sp"
        tools:text="Simple"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_history_edge"
        android:padding="4dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="14sp"
        tools:text="@string/modifier_rule_of_six"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_history_dice"
        android:padding="4dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        tools:text="10"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/common_roll_list_item_circle_size"
                android:layout_height="@dimen/common_roll_list_item_circle_size"
                android:id="@+id/list_item_history_hits"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/roll_result_circle"
                android:layout_gravity="center"
                tools:text="4"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_history_status"
            android:padding="4dp"
            android:gravity="center"
            android:layout_weight="1"
            tools:textColor="@color/glitch"
            tools:text="@string/glitch"/>
    </LinearLayout>

</LinearLayout>