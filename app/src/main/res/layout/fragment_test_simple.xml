<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    tools:context=".ui.MainActivity">
    <TextView
        android:layout_width="@dimen/result_circle_size"
        android:layout_height="@dimen/result_circle_size"
        android:id="@+id/test_simple_result_circle"
        android:layout_marginTop="16dp"
        android:background="@drawable/roll_result_circle"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        tools:text="4"/>
    <ScrollView
        android:layout_width="@dimen/result_output_max_width"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="@dimen/result_output_max_width"
            android:layout_height="wrap_content"
            android:id="@+id/test_simple_result_output"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:gravity="center"
            tools:text="6, 6, 5, 5, 4, 3, 3, 2, 2, 1, 1"/>
    </ScrollView>

    <com.imber.shadowroller.ui.DiceRollerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dice_roller_view_height"
        android:id="@+id/dice_roller_view"
        app:type="simple"/>

</LinearLayout>
